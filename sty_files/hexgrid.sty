\newcommand{\hexgrid}[2]{
    \foreach \x in {0,...,#1} {
    \foreach \y in {0,...,#2} {
        \pgfmathparse{mod(\y,2)};
        \node[hexgrid]
            (h\x;\y) at (0.4*0.45*\pgfmathresult+0.4*1.75*\x*0.5,0.4*-1.5*\y*0.5) {};
    }
    }
}

\newcommand{\hexcell}[2]{
    \node[hexcell,pieced] at (h#1;#2.south) {};
}
\newcommand{\pivot}[2]{
    \fill[white] (h#1;#2.center) circle (0.4*5pt);
    \fill[black] (h#1;#2.center) circle (0.4*2pt);
    \draw[black] (h#1;#2.center) circle (0.4*5pt);
}

\newcommand{\unit}[1]{
    \foreach \x/\y in {#1} {
        \hexcell{\x}{\y}
    }
}

\newcommand{\punit}[2]{
    \foreach \x/\y in {#1} {
        \node[hexcell,piece#2] at (h\x;\y.south) {};
    }
}

